<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">
    <insert id="create" parameterType="book" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO db_test.book VALUE (NULL ,#{title},#{author},#{date},#{price})
    </insert>

    <select id="queryAll" resultType="book">
        SELECT *
        FROM db_test.book;
    </select>

    <select id="queryBookById" parameterType="int" resultType="book">
        SELECT *
        FROM db_test.book
        WHERE id = #{id}
    </select>

    <update id="modify" parameterType="book">
        UPDATE db_test.book
        SET title  = #{title},
        author = #{author},
        date   = #{date},
        price  = #{price}
        WHERE id = #{id}
    </update>
    <delete id="remove" parameterType="int">
        DELETE FROM db_test.book
        WHERE id = #{id}
    </delete>

