<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
    <insert id="create" parameterType="demo.model.User" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO db_test.user VALUE (NULL ,#{username},#{password})
    </insert>

    <update id="update" parameterType="demo.model.User"><!--参数类型可以为字符串，但id的值必须为定值-->
        UPDATE db_test.user
        SET username = #{username}, password = #{password}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int"><!--id可直接设置为指定值，而不是设置为未定参数#{id}-->
        DELETE FROM db_test.user
        WHERE id = #{id}
    </delete>

    <select id="queryAll" resultType="demo.model.User">
        SELECT *
        FROM db_test.user;
    </select>
    <select id="queryById" parameterType="int" resultType="demo.model.User">
        SELECT *
        FROM db_test.user
        WHERE id = #{id};
    </select>
</mapper>